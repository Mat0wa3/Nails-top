<section class="table-container">
    <section class="table-body">
        <table>
            <thead>
                <slot name="thead" />
            </thead>

            <slot name="tbody" />
        </table>
    </section>
</section>

<style is:inline>
    .table-container {
        max-width: fit-content;
        width: 100%;
        margin-inline: auto;
        background-color: #fff4;
        backdrop-filter: blur(7px);
        border-radius: .8rem;
        overflow: hidden;

        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .table-body {
        width: 90%;
        max-height: 70dvh;
        background-color: #ffffff;
        margin: .8rem auto;
        border-radius: .6rem;
        position: relative;
        overflow: auto;

        &::-webkit-scrollbar {
            width: 0;
            height: 0;
        }
    }

    .table-body::-webkit-scrollbar-thumb {
        border-radius: 0.5rem;
        background-color: #0004;
        visibility: hidden;
        position: absolute
    }

    .table-body:hover::-webkit-scrollbar-thumb {
        visibility: visible;
    }

    table {
        border-collapse: collapse;
        background-color: #f5f5f5d0;
        width: 100%;
        height: 100%;
    }

    thead th {
        position: sticky;
        top: 0;
        left: 0;
        background-color: #d5d1defe;
    }

    th, td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid #ccccccd0;
    }

    th {
        font-weight: 500;
    }

    tr:nth-child(even) {
        background-color: #ddddddd0;
    }

    tbody tr:hover {
        background-color: #b8ccca;
    }
</style>