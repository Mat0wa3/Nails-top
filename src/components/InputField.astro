---
const { id, type, placeholder } = Astro.props
---
<div class="input-container">
    <span><slot name="icon" /></span>
    <input id={id} name={id} placeholder={placeholder} type={type} />
</div>

<style>
    .input-container {
        position: relative;
    }

    span {
        position: absolute;
        left: 6px;
        top: 6.5px;
        bottom: 0;
        color: #999;

        pointer-events: none;
    }

    input {
        width: 100%;
        outline-color: var(--color-400);
        padding: 10px 10px 10px 35px;
        border-radius: 9999px;
        border: 1px solid #ccc;
    }
</style>