---
const { id, type, placeholder } = Astro.props
---

<label>
    <slot />
    <div class="input">
        <span><slot name="icon" /></span>
        <input type={type} id={id} placeholder={placeholder} required/>
    </div>
</label>

<style>
    label {
        width: 100%;

        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 5px;
    }

    input {
        outline: none;
        border: none;
        background: transparent;
    }

    .input {
        background-color: #fff7;
        width: 100%;
        overflow: hidden;
        cursor: text;

        display: flex;
        align-items: center;
        gap: 10px;
        border: 1px solid #fff;
        border-radius: 9999px;
    }

    .input span {
        padding: 5px;
        background-color: #fff;

        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>